<?xml version="1.0" encoding="UTF-8" ?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>fr.inria.galaxy.j1</groupId>
    <artifactId>easysoa-samples-smarttravel-summary-model</artifactId>
    <version>1.0-SNAPSHOT</version>
    <name>J1: Summary model</name>
    <packaging>jar</packaging>

	<parent>
		<groupId>org.openwide.easysoa.samples</groupId>
		<artifactId>easysoa-samples-parent</artifactId>
		<version>0.3-SNAPSHOT</version>
	</parent>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins
                </groupId>
                <artifactId>maven-compiler-plugin
                </artifactId>
                <inherited>true</inherited>
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                </configuration>
            </plugin>
        </plugins>
    </build>
     <!-- to build classes from wsdl: mvn -Pbuild:wsdl
     -->
    <profiles>
        <profile>
            <id>build:wsdl</id>
            <build>
                <defaultGoal>compile</defaultGoal>
                <plugins>
                    <plugin>
                        <groupId>org.apache.cxf</groupId>
                        <artifactId>cxf-codegen-plugin
                        </artifactId>
                        <version>2.2.1</version>
                        <executions>
                            <execution>
                                <id>generate-sources
                                </id>
                                <phase>generate-sources
                                </phase>
                                <configuration>
                                    <sourceRoot>
                                        ${basedir}/target/generated/src/main/java
                                    </sourceRoot>
                                    <wsdlOptions>
                                        <wsdlOption>
                                            <wsdl>
                                                ${basedir}/src/main/resources/wsdl/CreateSummary.wsdl
                                            </wsdl>
                                             <bindingFiles>
                                                <bindingFile>
                                                    ${basedir}/src/main/resources/wsdl/mappingtranslate.xml
                                                </bindingFile>
                                            </bindingFiles>
                                            <extraargs>
                                                <extraarg>-verbose
                                                </extraarg>
                                            </extraargs>
                                        </wsdlOption>
                                    </wsdlOptions>
                                </configuration>
                                <goals>
                                    <goal>wsdl2java</goal>
                                </goals>
                            </execution>

                        </executions>
                    </plugin>
                </plugins>
            </build>


        </profile>
    </profiles>
</project>
